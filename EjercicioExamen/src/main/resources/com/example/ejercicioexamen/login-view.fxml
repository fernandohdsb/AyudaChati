<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.ejercicioexamen.controller.LoginController">

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label styleClass="label-header" text="Login - Tienda Online" />

    <VBox spacing="15.0" alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">

        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
            <Label text="Usuario" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <TextField fx:id="txtUsuario" promptText="Introduce tu usuario"
                       maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
        </VBox>

        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
            <Label text="Contraseña" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <PasswordField fx:id="txtPassword" promptText="Introduce tu contraseña"
                           maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
        </VBox>

        <Button text="Iniciar Sesión"
                fx:id="botonIniciarSesion"
                maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS"
                styleClass="button" onAction="#onLogin"/>


        <Button text="Registrarse"
                fx:id="botonRegistrarse"
                maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS"
                styleClass="button" />

    </VBox>

</VBox>