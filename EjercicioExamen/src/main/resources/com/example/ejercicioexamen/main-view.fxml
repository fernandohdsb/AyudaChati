<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="500.0" prefWidth="800.0" stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ejercicioexamen.controller.MainController">

    <!-- CABECERA -->
    <top>
        <VBox style="-fx-background-color: white; -fx-border-color: transparent transparent #ddd transparent;">
            <Label styleClass="label-header" text="Catálogo de Productos">
                <padding>
                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                </padding>
            </Label>
        </VBox>
    </top>

    <!-- CENTRO: Lista centrada con tamaño limitado -->
    <center>
        <VBox alignment="CENTER" style="-fx-background-color: #f4f4f4;">
            <ListView fx:id="listaProductos" maxWidth="500.0" maxHeight="400.0"
                      style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <placeholder>
                    <Label text="No hay productos disponibles" />
                </placeholder>
            </ListView>
        </VBox>
    </center>

    <!-- DERECHA: Panel de acciones "Elástico" -->
    <right>
        <VBox spacing="15.0" alignment="TOP_CENTER" prefWidth="200.0" styleClass="sidebar">
            <Label text="Acciones" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <!--
                 He eliminado el HBox del contador del carrito.
                 Solo quedan los botones de acción que se reparten el espacio vertical.
            -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">

                <Button fx:id="botonAniadir"
                        text="Añadir al Carrito"
                        maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS"
                        styleClass="button" />

                <Button fx:id="botonVer"
                        text="Ver Carrito"
                        maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS"
                        styleClass="button" />

                <Button fx:id="botonVaciar"
                        text="Vaciar Carrito"
                        maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS"
                        styleClass="button, button-danger"/>

            </VBox>
        </VBox>
    </right>

</BorderPane>